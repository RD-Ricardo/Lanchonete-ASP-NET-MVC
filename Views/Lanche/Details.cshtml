@model Lanche
<div class="container">
    <div class="row">
        <div class="text-center">
            <img src="@Model.ImagemUrl" class="img-fluid" >
        </div>
        <div class="card-block">
            <h2 class="card-title">@Model.Nome</h2>
            <p class="card-text"> <h5>@Model.DescricaoLonga</h5></p>
            <p class="btn btn-group align-content-lg-end">
                <a asp-controller="Lanche" asp-action="List" class="btn btn-outline-info">Ver Todos os Lanches</a>
                <a asp-controller="CarrinhoCompra" asp-action="AdicionarItemCarrinhoCompra" 
                    asp-route-lancheId="@Model.LancheId" class="btn btn-primary">Adicionar @Model.Nome ao Carrinho</a>
            </p>
        </div>
    </div>
</div>